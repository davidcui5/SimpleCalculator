<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/colorSilver"
    tools:context=".MainActivity">

    <!-- row 1: memory screen -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@color/colorAliceBlue">

        <TextView
            android:id="@+id/memoryScreen"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:gravity="start"
            android:maxLines="1"
            android:padding="6dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="20sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/operatorScreen"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="end"
            android:padding="6dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="25sp"
            android:typeface="serif" />
    </LinearLayout>

    <!-- row 2: input output -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="3dp"
        android:background="@color/colorAliceBlue">

        <TextView
            android:id="@+id/inputOutputScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:maxLines="1"
            android:padding="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="40sp"
            android:typeface="serif" />
    </LinearLayout>

    <!-- row 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnMC"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="25sp"
            android:text="@string/clearMem"
            android:textColor="@color/colorNavyBlue"
            android:backgroundTint="@color/colorWhite"/>
        <Button
            android:id="@+id/btnMAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="25sp"
            android:text="@string/addToMem"
            android:textColor="@color/colorNavyBlue"
            android:backgroundTint="@color/colorWhite"/>
        <Button
            android:id="@+id/btnMSub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="25sp"
            android:text="@string/subtractFromMem"
            android:textColor="@color/colorNavyBlue"
            android:backgroundTint="@color/colorWhite"/>
        <Button
            android:id="@+id/btnMR"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="25sp"
            android:text="@string/readMem"
            android:textColor="@color/colorNavyBlue"
            android:backgroundTint="@color/colorWhite"/>
    </LinearLayout>

    <!-- row 4 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="@string/clear"
            android:textColor="@color/colorAliceBlue"
            android:backgroundTint="@color/colorRed"/>
        <Button
            android:id="@+id/btnSign"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="@string/sign"
            android:backgroundTint="@color/colorWhite"/>
        <Button
            android:id="@+id/btnDivide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="@string/divide"
            android:textColor="@color/colorMidnightBlue"
            android:backgroundTint="@color/colorLavender"/>
        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="@string/multiply"
            android:textColor="@color/colorMidnightBlue"
            android:backgroundTint="@color/colorLavender"/>
    </LinearLayout>

    <!-- row 5 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnSeven"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="@string/seven"
            android:backgroundTint="@color/colorWhite"/>
        <Button
            android:id="@+id/btnEight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="@string/eight"
            android:backgroundTint="@color/colorWhite"/>
        <Button
            android:id="@+id/btnNine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="@string/nine"
            android:backgroundTint="@color/colorWhite"/>
        <Button
            android:id="@+id/btnSubtract"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="@string/subtract"
            android:textColor="@color/colorMidnightBlue"
            android:backgroundTint="@color/colorLavender"/>
    </LinearLayout>
    
    <!-- row 6 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
        <Button
            android:id="@+id/btnFour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="@string/four"
            android:backgroundTint="@color/colorWhite"/>
        <Button
            android:id="@+id/btnFive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="@string/five"
            android:backgroundTint="@color/colorWhite"/>
        <Button
            android:id="@+id/btnSix"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="@string/six"
            android:backgroundTint="@color/colorWhite"/>
        <Button
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:textColor="@color/colorMidnightBlue"
            android:text="@string/add"
            android:backgroundTint="@color/colorLavender"/>
    </LinearLayout>

    <!-- row 7 and 8 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <!-- left three buttons -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <!-- row 7 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btnOne"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:text="@string/one"
                    android:backgroundTint="@color/colorWhite"/>
                <Button
                    android:id="@+id/btnTwo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:text="@string/two"
                    android:backgroundTint="@color/colorWhite"/>
                <Button
                    android:id="@+id/btnThree"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:text="@string/three"
                    android:backgroundTint="@color/colorWhite"/>
            </LinearLayout>

            <!-- row 8 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btnZero"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="30sp"
                    android:text="@string/zero"
                    android:backgroundTint="@color/colorWhite"/>
                <Button
                    android:id="@+id/btnDecimal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:text="@string/decimal"
                    android:backgroundTint="@color/colorWhite"/>
            </LinearLayout>
        </LinearLayout>

        <!-- equal button -->
        <Button
            android:id="@+id/btnEqual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="@string/equal"
            android:textColor="@color/colorWhite"
            android:backgroundTint="@color/colorMidnightBlue"/>
    </LinearLayout>
</LinearLayout>